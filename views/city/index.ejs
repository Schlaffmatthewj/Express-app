<%- include('../partials/boilerplate') %>

<h3><%= data.city_name %> PAGE</h3>
<% data.city_cuisine.map(el => { %>
    <p><%= el %></p>
<% }) %>
<a href="<%= data.city_link %>" target="_blank">City Link</a>

<ul>
    <% for (let city of data.city_nearby) { %>
        <li><%= city %></li>
    <% } %>
</ul>
<% if (user) { %>
    <form method="GET" action="/user">
        <input type="submit" value="Back to <%= data.user.username %>'s'  Page"/>
    </form>
<% } %>
<form method="GET" action="/search">
    <input type="submit" value="Back to Main Search" />
</form>
<form method="POST" action="/user/city/<%= data.city_id %>">
    <input type="submit" value="Add <%= data.city_name %> to MY PAGE" />
</form>

<%- include('../partials/end') %>